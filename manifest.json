{
    "manifest_version": 2,
   
    "name": "Squash",
    "version": "0.1.0",
    "description": "Automated fact-checking for YouTube",
   
    "content_scripts": [{
      "css": ["styles.css"],
      "js": ["content.js"],
      "matches": ["https://www.youtube.com/*"]
    }],

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }

   
  }